# Local Development Schema (SQLite)
# This file maintains SQLite for local development
# Copy this content to schema.prisma when working locally

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

# All your existing models remain the same...
# The models don't need to change between SQLite and PostgreSQL
